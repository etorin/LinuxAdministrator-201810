# -*- mode: ruby -*-
# vim: set ft=ruby :
home = ENV['HOME']


MACHINES = {
  :bashscripts => {
        :box_name => "centos/7",
        :box_version => "1804.02",
        :ip_addr => '192.168.33.12',
    :disks => {
        :sata1 => {
            :dfile => home + '/VMDisks/lvm/sata1.vdi',
            :size => 10240, # Megabytes
            :port => 1
        },
        :sata2 => {
            :dfile => home + '/VMDisks/lvm/sata2.vdi',
            :size => 2048, 
            :port => 2
        },
        :sata3 => {
            :dfile => home + '/VMDisks/lvm/sata3.vdi',
            :size => 1024, 
            :port => 3
        },
        :sata4 => {
            :dfile => home + '/VMDisks/lvm/sata4.vdi',
            :size => 1024,
            :port => 4
        },
        :sata5 => {
            :dfile => home + '/VMDisks/lvm/sata5.vdi',
            :size => 256, 
            :port => 5
        },
        :sata6 => {
            :dfile => home + '/VMDisks/lvm/sata6.vdi',
            :size => 256,
            :port => 6
        }
    }
  },
}

Vagrant.configure("2") do |config|

  MACHINES.each do |boxname, boxconfig|

      config.vm.define boxname do |box|

          box.vm.box = boxconfig[:box_name]
          box.vm.box_version = boxconfig[:box_version]

          box.vm.host_name = boxname.to_s

          #box.vm.network "forwarded_port", guest: 3260, host: 3260+offset

          box.vm.network "private_network", ip: boxconfig[:ip_addr]

          box.vm.provider :virtualbox do |vb|
                  vb.customize ["modifyvm", :id, "--memory", "200"]
          vb.customize ["storagectl", :id, "--name", "SATA", "--add", "sata" ]
          vb.name = boxname.to_s

          boxconfig[:disks].each do |dname, dconf|
              unless File.exist?(dconf[:dfile])
                vb.customize ['createhd', '--filename', dconf[:dfile], '--variant', 'Fixed', '--size', dconf[:size]]
              end
              vb.customize ['storageattach', :id,  '--storagectl', 'SATA', '--port', dconf[:port], '--device', 0, '--type', 'hdd', '--medium', dconf[:dfile]]

          end
          end
      box.vm.provision "shell", inline: <<-SHELL
        mkdir -p ~root/.ssh
              cp ~vagrant/.ssh/auth* ~root/.ssh
        yum makecache
        yum install -y mdadm smartmontools hdparm gdisk
        yum install -y e2fsprogs
        yum install -y lvm2
        yum install -y xfsdump
        sed -i '65s/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config
        systemctl restart sshd
      SHELL

      end
  end
end

